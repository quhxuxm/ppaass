    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug proxy",
            "cargo": {
                "args": [
                    "build",
                    "--bin=ppaass-proxy",
                    "--package=ppaass-proxy"
                ],
                "filter": {
                    "name": "ppaass-proxy",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug agent",
            "cargo": {
                "args": [
                    "build",
                    "--bin=ppaass-agent-windows",
                    "--package=ppaass-agent-windows"
                ],
                "filter": {
                    "name": "ppaass-agent-windows",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
    ]
}